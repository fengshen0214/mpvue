@import "/static/css/vendor.wxss";

swiper-item {
  height: 300rpx;
  width: 1280rpx;
}
swiper-item image {
  height: 100%;
  width: 100%;
  float: left;
}
.clearfix:before,
.clearfix:after {
  content: "";
  display: table;
}
.clearfix:after {
  clear: both;
}
.newest_list {
  height: 1000rpx;
}
.newest_item {
  height: 400rpx;
  width: 100%;
  border-bottom: solid 2rpx #ccc;
}
.newest_item ._a {
  float: left;
  display: inline-block;
  width: 50%;
}
.newest_item ._a ._img {
  margin: 100rpx 0 100rpx 20rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.newest_item ._span {
  display: inline-block;
  float: left;
  line-height: 400rpx;
  padding-left: 40rpx;
}