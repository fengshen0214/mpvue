@import "/static/css/vendor.wxss";

swiper-item {
  height: 300rpx;
  width: 1280rpx;
}
swiper-item image {
  height: 100%;
  width: 100%;
  float: left;
}
.clearfix:before,
.clearfix:after {
  content: "";
  display: table;
}
.clearfix:after {
  clear: both;
}
.newest_list1 {
  height: 1000rpx;
}
.newest_list2Main {
  white-space: nowrap;
  display: flex;
  border-bottom: solid 2rpx #a092cc;
  padding: 20rpx 0;
}
.newest_list2 {
  width: 100%;
}
.newest_list2 ._li {
  width: auto;
  display: inline-block;
}
.newest_list2 ._li ._a {
  margin: 0 20rpx;
  padding: 8rpx;
  background: #a5ffc5;
  border-radius: 8rpx;
}
.newest_item {
  height: 400rpx;
  width: 100%;
  border-bottom: solid 2rpx #ccc;
}
.newest_item ._a {
  float: left;
  display: inline-block;
  width: 50%;
}
.newest_item ._a ._img {
  margin: 100rpx 0 100rpx 20rpx;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  overflow: hidden;
  float: left;
}
.newest_item ._span {
  display: inline-block;
  float: left;
  line-height: 400rpx;
  padding-left: 40rpx;
}